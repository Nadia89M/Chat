<h2 class="chatroom-name">
  <%= @chatroom.name %>
</h2>

<br>

<div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>'>
  <% @messages.each do |message| %>
    <%= render message %>
  <% end %>
</div>

<%= form_for [@chatroom, Message.new] do |f| %>
  <%= f.text_area :body, rows: 1, class: "form-control", style: "float: left; width: 60%; display: block", autofocus: true %>
<% end %>
